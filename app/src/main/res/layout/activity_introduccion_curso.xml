<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_intro_curso"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.edu.poli.gamification.poliplay.Narrativa.IntroduccionCurso">

    <ImageView
        android:id="@+id/logo_poli_intro_curso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/titulo_intro_curso"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_poli_azul" />

    <ImageView
        android:id="@+id/titulo_intro_curso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/header_intro_curso"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_poli_intro_curso"
        app:srcCompat="@drawable/titulo_intro_ambiental" />

    <android.support.constraint.Guideline
        android:id="@+id/header_intro_curso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <ImageView
        android:id="@+id/descripcion_intro_curso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/footer_intro_curso"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/header_intro_curso"
        app:srcCompat="@drawable/descripcion_intro_curso" />

    <android.support.constraint.Guideline
        android:id="@+id/footer_intro_curso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.86" />

    <ImageButton
        android:id="@+id/btn_back_intro_curso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:onClick="goBack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_cont_intro_curso"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/footer_intro_curso"
        app:srcCompat="@drawable/boton_atras" />

    <ImageButton
        android:id="@+id/btn_cont_intro_curso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:onClick="goForward"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_back_intro_curso"
        app:layout_constraintTop_toTopOf="@+id/footer_intro_curso"
        app:srcCompat="@drawable/boton_adelante" />
</android.support.constraint.ConstraintLayout>
